<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matan.matan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <!-- Allows access to the vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Allows access to the flashlight -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <!-- Allows access to the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera" />

    <!-- Allows access to the fingerprint reader -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- Allows access to the accelerometer reader -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" />

    <!-- Allows access to the bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.matan.matan.Splashscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.matan.matan.MainActivity" />
        <activity android:name="com.example.matan.matan.vibration_page" />
        <activity android:name="com.example.matan.matan.charger_page" />
        <activity android:name="com.example.matan.matan.flashlight_page" />
        <activity android:name="com.example.matan.matan.speaker_page" />
        <activity android:name="com.example.matan.matan.fingerprint_page" />
        <activity android:name="com.example.matan.matan.fingerprint_page_2" />
        <activity android:name="com.example.matan.matan.gps_page" />
        <activity android:name="com.example.matan.matan.gps_page_2" />
        <activity android:name="com.example.matan.matan.proximity_page" />
        <activity android:name="com.example.matan.matan.status_page" />
        <activity android:name="com.example.matan.matan.bluetooth_page" />
        <activity android:name="com.example.matan.matan.light_page" />
    </application>

</manifest>